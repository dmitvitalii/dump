#!/usr/bin/env bash
#
# Make a symlink to /home/username/bin
# TODO: make it able to repair broken links.

chkdir() {
    if [ ! -d ${HOME}/bin ]; then
        mkdir ${HOME}/bin
    fi
}

if [ "${1}" == "-h" ] || [ "${1}" == "--help" ] || [ ! -e "${1}" ] ; then
    echo "Usage: ${0##*/} path/to/executable"
elif [ -d "${1}" ]; then
    echo "Do not place directories to ${HOME}/bin/!"
else
    chkdir
    chmod +x ${1}
    ln -snf $(readlink -f ${1}) ${HOME}/bin/${1}
fi
